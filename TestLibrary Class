            userSelection = userInput.nextInt(); userInput.nextLine();
            
            if (userSelection == 1) { //Add book
                System.out.print("\nPlease, insert book details in the following form (author, title, pages, shelf number, barcode): ");
                userString = userInput.nextLine();
                String[] userArguments = userString.split(",");
                
                firstLibrary.addBook(new Book(userArguments[0],userArguments[1],userArguments[2],userArguments[3], userArguments[4])); 
            }
            
            if (userSelection == 2) { //borrow book
                System.out.print("\nPlease, insert barcode: ");
                userString = userInput.nextLine();
                firstLibrary.borrowBook(userString);
